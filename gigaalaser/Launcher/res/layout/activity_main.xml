<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <cn.com.gigaalaser.launcher.LauncherSurfaceView
        android:id="@+id/surfaceview_video"
        android:layout_width="100.0dip"
        android:layout_height="fill_parent" />

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_video_cap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture" />

        <RadioGroup
            android:id="@+id/videoformat_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio_pal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/pal" />

            <RadioButton
                android:id="@+id/radio_ntsc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ntsc" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkbox_busy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/busy" />

        <AnalogClock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    

</LinearLayout>